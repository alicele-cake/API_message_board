@model IEnumerable<messageboardAPI.Models.Comment>

<h1>留言列表</h1>
<ul>
    @foreach (var comment in Model)
    {
        <li>
            <strong>@comment.Username:</strong> @comment.Message
            <form asp-action="Delete" asp-route-id="@comment.Id" method="post" style="display:inline;">
                <button type="submit">刪除</button>
            </form>
            <a asp-action="Edit" asp-route-id="@comment.Id">編輯</a>
        </li>
    }
</ul>

<h2>新增留言</h2>
<form asp-action="Create" method="post">
    <label for="username">用戶名稱:</label>
    <input type="text" id="username" name="Username" required />
    <label for="message">留言內容:</label>
    <textarea id="message" name="Message" required></textarea>
    <button type="submit">提交</button>
</form>
